        const ctx = document.getElementById('comparisonChart').getContext('2d');
        const comparisonChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: ['Ridgefield', 'Carlisle', 'Moreno Valley', 'Rocklin', 'Greenwood', 'Aurora', 'Twin Cities', 'Sarasota', 'Atlanta', 'Racine'],
                datasets: [
                    {
                        label: '2025 Sales',
                        data: [47359, 25269, 30988, 26476, 16733, 13298, 5040, 3286, 3204, 5220],
                        backgroundColor: '#3b82f6',
                        borderRadius: 6,
                        borderSkipped: false,
                    },
                    {
                        label: '2024 Sales',
                        data: [23625, 10498, 17122, 16979, 14292, 10401, 3423, 5004, 3344, 9986],
                        backgroundColor: '#cbd5e1',
                        borderRadius: 6,
                        borderSkipped: false,
                    }
                ]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'top',
                        labels: {
                            font: {
                                size: 13,
                                weight: 600
                            },
                            padding: 20,
                            usePointStyle: true
                        }
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            callback: function(value) {
                                return '$' + value.toLocaleString();
                            },
                            font: {
                                size: 12
                            }
                        },
                        grid: {
                            color: '#f1f5f9'
                        }
                    },
                    x: {
                        ticks: {
                            font: {
                                size: 12,
                                weight: 500
                            }
                        },
                        grid: {
                            display: false
                        }
                    }
                }
            }
        });
